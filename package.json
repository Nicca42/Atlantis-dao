{
  "name": "Atlantis-dao",
  "version": "1.0.0",
  "description": "An un-opinionated DAO framework",
  "main": "README.md",
  "repository": "https://github.com/Nicca42/Atlantis-dao.git",
  "author": "Veronica <veronica.21.coutts@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "hardhat compile",
    "test": "hardhat test",
    "cover": "hardhat coverage",
    "start": "hardhat node",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:rinkeby": "hardhat run scripts/deploy.js --network rinkeby",
    "deploy:kovan": "hardhat run scripts/deploy.js --network kovan",
    "clean": "rm -rf artifacts && rm -rf cache && rm -rf docs/gen-docs && coverage.json && coverage",
    "deep-clean": "yarn clean && rm -rf node_modules && yarn.lock",
    "flat": "hardhat flatten > flat.txt"
  },
  "dependencies": {
    "@openzeppelin/contracts": "4.3.0",
    "dotenv": "10.0.0",
    "hardhat": "2.3.0",
    "web3": "1.3.6"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.0",
    "@nomiclabs/hardhat-waffle": "2.0.0",
    "@types/chai": "4.2.19",
    "@types/mocha": "8.2.2",
    "@types/node": "15.12.5",
    "chai": "4.3.4",
    "ethereum-waffle": "3.0.0",
    "ethers": "5.0.0",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-docgen": "^1.1.2",
    "hardhat-gas-reporter": "1.0.4",
    "solidity-coverage": "0.7.16",
    "ts-node": "10.0.0",
    "typescript": "4.3.4"
  }
}
